@{
    ViewData["Title"] = "Gửi đánh giá khoá học";
    var course = ViewBag.Course as DangKyKhoaHoc.Models.Course;
}

<h2 class="text-center fw-bold text-warning mb-4">
    <i class="bi bi-chat-dots"></i> Gửi đánh giá khoá học
</h2>

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark fw-semibold">
                <i class="bi bi-book"></i> @course?.Title
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" name="courseId" value="@course?.CourseId" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Số sao (1-5):</label>
                        <input type="number" name="rating" class="form-control" min="1" max="5" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nhận xét:</label>
                        <textarea name="comment" class="form-control" rows="4" placeholder="Nhập nhận xét của bạn..."></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-send"></i> Gửi đánh giá
                        </button>
                        <a asp-action="MyCourses" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
