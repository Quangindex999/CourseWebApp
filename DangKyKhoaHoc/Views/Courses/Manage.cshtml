@model IEnumerable<DangKyKhoaHoc.Models.Course>
@{
    ViewData["Title"] = "Quản lý khoá học";
}

<h2>Quản lý khoá học</h2>

@if (Model.Any())
{
    <a class="btn btn-success mb-2" asp-action="Create">Thêm mới khoá học</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Giảng viên</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Sức chứa</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Instructor</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                    <td>@item.Capacity</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.CourseId">Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CourseId" onclick="return confirm('Bạn có chắc muốn xóa khoá học này không?')">Xóa</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.CourseId">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

