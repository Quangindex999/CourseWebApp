@model DangKyKhoaHoc.Models.User

@{
    ViewData["Title"] = "Thêm tài khoản mới";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white text-center">
                <h3 class="fw-bold mb-0">
                    <i class="bi bi-person-plus"></i> Thêm tài khoản mới
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-semibold"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Họ tên đầy đủ" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PasswordHash" class="form-label fw-semibold"></label>
                        <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Mật khẩu" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label fw-semibold"></label>
                        <select asp-for="Role" class="form-select">
                            <option value="">-- Chọn vai trò --</option>
                            <option value="student">Học viên</option>
                            <option value="teacher">Giảng viên</option>
                            <option value="admin">Admin</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreatedAt" class="form-label fw-semibold"></label>
                        <input asp-for="CreatedAt" class="form-control" type="date" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-person-plus"></i> Thêm mới
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
