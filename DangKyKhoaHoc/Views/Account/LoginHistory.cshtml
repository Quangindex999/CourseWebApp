@model IEnumerable<DangKyKhoaHoc.Models.LoginHistory>
@{
    ViewData["Title"] = "LoginHistory";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="col-sm-3 text-center">Thời gian đăng nhập</th>
                <th class="col-sm-3 text-center">Địa chỉ IP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @(item.LoginTime.HasValue? item.LoginTime.Value.ToString("dd/MM/yyyy HH:mm:ss") : "Không xác định")
                    </td>

                    <td class="text-center">@item.Ipaddress</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Bạn chưa có lịch sử đăng nhập nào.</p>
}
