@model DangKyKhoaHoc.Models.Login

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-header text-center bg-primary text-white">
                <h3 class="fw-bold mb-0">
                    <i class="bi bi-person-circle"></i> Đăng nhập
                </h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">
                        @ViewBag.Error
                    </div>
                }
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success text-center">
                        @ViewBag.Success
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold"></label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu..." />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid mb-2">
                        <button type="submit" class="btn btn-primary fw-bold">
                            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                        </button>
                    </div>
                    <div class="text-center">
                        <span>Bạn chưa có tài khoản?</span>
                        <a asp-action="Register" class="link-primary fw-semibold">Đăng ký ngay</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
